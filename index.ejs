<!DOCTYPE html>
<html>
<head>
  <title>My Blog</title>
</head>
<body>
  <h1>My Blog</h1>
  <a href="/new">+ New Post</a>
  <hr>
  <% if (posts.length === 0) { %>
    <p>No posts yet. Be the first to write!</p>
  <% } %>
  <ul>
    <% posts.forEach(post => { %>
      <li>
        <h2><%= post.title %></h2>
        <p><%= post.content %></p>
        <small>By <%= post.author %> | <%= post.createdAt.toDateString() %></small>
        <hr>
      </li>
    <% }) %>
  </ul>
</body>
</html>
